@tailwind base;
@tailwind components;
@tailwind utilities;

html {
    font-size: 10px;
    background: #EDEDED;
}

.content__default {
    height: 100%;
    width: 100%;
}

#app {
    display: flex;
    align-items: stretch;
    font-family: 'Roboto', sans-serif;
    color: black;
    height: 100%;
    width: 100%;

    .vm--modal {
        box-shadow: 0px 0px 14px rgba(0, 0, 0, 0.05);
    }

    .vm--overlay {
        background-color: unset;    
    }

    @media screen and (min-width: 768px) {
        padding-bottom: 9rem;
    }
}